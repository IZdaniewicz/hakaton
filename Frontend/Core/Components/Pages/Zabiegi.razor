@page "/care"

<div class="container new-home my-4">

    <!-- Title -->
    <div class="mb-4">
        <h2>Zabiegi i opieka 🏥</h2>
        <p class="text-muted">Wybierz obszar leczenia, aby zobaczyć szczegóły i zalecenia</p>
    </div>

    <!-- Medical Areas (Tiles) -->
    <div class="row g-4">
        <div class="col-6 col-md-3">
            <a href="/zabiegi/ortopedia" class="tile d-block text-center p-4 bg-light rounded shadow-sm text-decoration-none text-dark">
                <div class="tile-icon-wrapper">
                    <i class="bi bi-bandaid tile-icon"></i>
                </div>
                <p class="mt-2 mb-0">Ortopedia</p>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a href="/zabiegi/kardiologia" class="tile d-block text-center p-4 bg-light rounded shadow-sm text-decoration-none text-dark">
                <div class="tile-icon-wrapper">
                    <i class="bi bi-heart-pulse-fill tile-icon text-danger"></i>
                </div>
                <p class="mt-2 mb-0">Kardiologia</p>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a href="/zabiegi/neurologia" class="tile d-block text-center p-4 bg-light rounded shadow-sm text-decoration-none text-dark">
                <div class="tile-icon-wrapper">
                    <i class="bi bi-lightbulb tile-icon"></i>
                </div>
                <p class="mt-2 mb-0">Neurologia</p>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a href="/zabiegi/okulistyka" class="tile d-block text-center p-4 bg-light rounded shadow-sm text-decoration-none text-dark">
                <div class="tile-icon-wrapper">
                    <i class="bi bi-eye tile-icon"></i>
                </div>
                <p class="mt-2 mb-0">Okulistyka</p>
            </a>
        </div>
    </div>

</div>
