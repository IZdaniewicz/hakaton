<input type="checkbox" id="nav-toggle" class="nav-toggle" />

<label for="nav-toggle" class="hamburger-clean">
	<span></span>
	<span></span>
	<span></span>
</label>

<aside class="drawer-menu" onclick="document.getElementById('nav-toggle').checked = false">
	<nav>
		@if (IsLogged)
		{
					<NavItem Icon="bi bi-columns-gap" Label="Panel główny" Href="" />
					<NavItem Icon="bi bi-calendar3" Label="Kalendarz" Href="kalendarz" />
					<NavItem Icon="bi bi-heart-pulse" Label="Zabiegi" Href="care" />
					<NavItem Icon="bi bi-box-arrow-right" Label="Wyloguj się" Href="logout" />
					<NavItem Icon="bi bi-list-nested-nav-menu" Href="map" Label="Mapa" />
					<NavItem Icon="bi bi-puzzle" Label="Gra pamięciowa" Href="memory" />

					<hr />

					<NavItem Icon="bi bi-person-plus" Label="Profil" Href="profil" />
					<NavItem Icon="bi bi-gear" Label="Ustawienia" Href="settings" />
		}
		else
		{
					<NavItem Icon="bi bi-person-plus" Label="Rejestracja" Href="rejestracja" />
					<NavItem Icon="bi bi-box-arrow-in-right" Label="Logowanie" Href="login" />
		}
	</nav>
</aside>

@code {
	[Parameter] public bool IsLogged { get; set; }
}